<%- include ("partials/header") %>
<body>
  <%- include ("partials/navbar") %>
  <div class="container">
    <a href="/perguntar"
      ><button class="btn btn-primary btnNovaPergunta">Nova Pergunta</button></a
    >
    <div class="grid-cards">
      <% perguntas.forEach(function(p, i){ %>
      <div class="card">
        <div class="card-header">
          <h3><%= p.titulo %></h3>
        </div>
        <div class="card-body">
          <p><%= p.descricao %></p>
        </div>
        <div class="card-footer">
          <a href="/pergunta/" class="btn btn-primary">Ver Respostas</a>
        </div>
      </div>
      <% }); %>
    </div>
  </div>
</body>
<%- include ("partials/footer") %>
